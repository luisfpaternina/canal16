<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_view_form_inherit_stock" model="ir.ui.view">
            <field name="name">product.template.inherit.form</field>
            <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <button name="action_view_stock_move_lines" position="after">
                    <button string="Manage Stock Reservation" type="object"
                            name= "action_view_stock_move_reservation_lines"
                            attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}"
                            class="oe_stat_button" icon="fa-list-alt"
                            groups="stock.group_stock_user"/>
                </button>
            </field>
        </record>
        <record id="product_product_view_form_inherit_stock" model="ir.ui.view">
            <field name="name">product.product.inherit.form</field>
            <field name="inherit_id" ref="stock.product_form_view_procurement_button"/>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <button name="action_view_stock_move_lines" position="after">
                    <button string="Manage Stock Reservation" type="object"
                            name= "action_view_stock_move_reservation_lines"
                            attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}"
                            class="oe_stat_button" icon="fa-list-alt"
                            groups="stock.group_stock_user"/>
                </button>
            </field>
        </record>
        <record id="view_move_tree_stock_reservation" model="ir.ui.view">
            <field name="name">stock.move.tree.stock.reservation</field>
            <field name="model">stock.move</field>
            <field name="priority" eval="100"/>
            <field name="arch" type="xml">
                <tree string="Moves">
                    <field name="picking_partner_id" string="Partner"/>
                    <field name="location_id" string="Source Location"/>
                    <field name="location_dest_id" string="Destination Location"/>
                    <field name="product_id"/>
                    <field name="picking_id" string="Reference"/>
                    <field name="date_expected" widget='date'/>
                    <field name="date" widget="date"/>
                    <field name="origin"/>
                    <field name="product_uom_qty"/>
                    <field name="reserved_availability"/>
                    <field name="product_uom" options="{'no_open': True, 'no_create': True}" string="Unit of Measure" groups="uom.group_uom"/>
                    <field name="state"/>
                    <button name="action_unreserve_stock" string="Unreserve" type="object" icon="fa-times-circle-o"/>
                    <button name="action_reserve_stock" string="Reserve" type="object" icon="fa-check-square-o"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>